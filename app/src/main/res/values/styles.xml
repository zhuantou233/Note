<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black_effective</item>
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:windowBackground">@color/bg_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/white</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/colorTheme</item>
    </style>

    <style name="TextStyle.Heading" parent="TextStyle">
        <item name="android:textSize">@dimen/app_name_size</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.AppName</item>
    </style>

    <style name="TextAppearance.Text.AppName" parent="android:TextAppearance">
        <item name="fontPath">fonts/AppName.ttf</item>
    </style>

    <style name="TextStyle.Description">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_special</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_tiny</item>
    </style>

    <style name="TextStyle.BottomDialog">
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyle.NavHeaderName">
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.NavHeaderType">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="InputFormStyle">
        <item name="android:layout_height">@dimen/input_form_height</item>
        <item name="android:layout_marginBottom">@dimen/margin_special</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="InputFormImageStyle">
        <item name="android:layout_width">@dimen/image_size_medium</item>
        <item name="android:layout_height">@dimen/image_size_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_special</item>
        <item name="android:layout_marginTop">@dimen/margin_special</item>
    </style>

    <style name="InputFormNumStyle">
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="InputFormPasswordStyle">
        <item name="android:maxLength">30</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="LoadingButtonStyle">
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_special</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:background">@drawable/button_shape_default_rounded</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="OtherOptionTextStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ClickFunctionStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="FunctionTitleTextAppearance">
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>

    <style name="FunctionContentTextAppearance">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="FunctionImageStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AccountDetailDialog" />

    <style name="AccountDetailDialog.BackgroundStyle" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="AccountDetailDialog.TitleAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AccountDetailDialog.EditAppearance">
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:focusable">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:backgroundTint">@color/red_dark2</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="AccountDetailDialog.MenuFormAppearance">
        <item name="android:layout_marginTop">@dimen/margin_tiny</item>
    </style>

    <style name="AccountDetailDialog.MenuItemAppearance">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/red_dark</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

</resources>
